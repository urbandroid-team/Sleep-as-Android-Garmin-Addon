<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="20dp"
            android:background="@color/tint"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/logo"
                android:src="@mipmap/logo"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/card"
                android:id="@+id/card_battery_optimization_opt_out"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent" android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/secondary"
                    style="?android:attr/textAppearanceMedium"
                    android:id="@+id/text_battery_optimization_opt_out"
                    android:text="@string/text_battery_optimization_opt_out"
                    android:paddingBottom="8dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>

                <Button
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:textColor="@color/primary"
                    android:background="@drawable/button_flat"
                    android:id="@+id/btn_battery_optimization_opt_out"
                    android:text="@string/fix"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/card"
                android:id="@+id/card_allow_notifications"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent" android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/secondary"
                    style="?android:attr/textAppearanceMedium"
                    android:id="@+id/text_allow_notifications"
                    android:text="@string/text_allow_notifications"
                    android:paddingBottom="8dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>

                <Button
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:textColor="@color/primary"
                    android:background="@drawable/button_flat"
                    android:id="@+id/btn_allow_notifications"
                    android:text="@string/read_more"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/card"
                android:id="@+id/card_install_saa"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/secondary"
                    style="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView5"
                    android:text="@string/install_saa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:textColor="@color/primary"
                    android:background="@drawable/button_flat"
                    android:id="@+id/install_saa"
                    android:text="@string/install"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/card"
                android:id="@+id/card_install_gcm"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/secondary"
                    style="?android:attr/textAppearanceMedium"
                    android:id="@+id/install_gcm_text"
                    android:text="@string/install_gcm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:textColor="@color/primary"
                    android:background="@drawable/button_flat"
                    android:id="@+id/install_gcm"
                    android:text="@string/install"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/card"
                android:id="@+id/card_install_watchapp"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/secondary"
                    style="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView6"
                    android:text="@string/install_watchapp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:textColor="@color/primary"
                    android:background="@drawable/button_flat"
                    android:id="@+id/install_watchapp"
                    android:text="@string/install"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/card"
                android:id="@+id/card_whitelist_GCM"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/secondary"
                    style="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView7"
                    android:text="@string/whitelist_GCM_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/whitelist_GCM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/button_flat"
                    android:text="@string/setup"
                    android:textColor="@color/primary"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/card"
                android:id="@+id/card_install_watchsleepstarter"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/secondary"
                    style="?android:attr/textAppearanceMedium"
                    android:id="@+id/install_watchsleepstarter_text"
                    android:text="@string/install_sleep_watch_starter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/install_watchsleepstarter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/button_flat"
                    android:text="@string/install"
                    android:textColor="@color/primary"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_setup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:padding="20dp"
                android:background="@drawable/card"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/setup_text"
                    style="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/setup_text"
                    android:textColor="@color/secondary" />

                <Button
                    android:id="@+id/setup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/button_flat"
                    android:text="@string/setup"
                    android:textColor="@color/primary"
                    android:textStyle="bold" />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</FrameLayout>